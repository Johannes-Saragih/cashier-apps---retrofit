<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:padding="10dp"
    tools:context=".StrukActivity">

    <androidx.cardview.widget.CardView
        android:foreground="@drawable/cardshape"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="STRUK BELANJA"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="@font/nunitosans_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/date"
                    android:text="date and time"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunitosans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                android:text="------------------------------------"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunitosans_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleviewresult"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="------------------------------------"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunitosans_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Total Pembayaran : "
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunitosans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/texttotalpembayaran"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunitosans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:text="------------------------------------"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunitosans_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Pilih metode pembayaran"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunitosans_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnsudahsesuai"
                    android:text="Tunai"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nunitosans_regular"
                    android:background="@drawable/btnbackground"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btntidaksesuai"
                    android:text="Non-Tunai"
                    android:textAllCaps="false"
                    android:fontFamily="@font/nunitosans_regular"
                    android:background="@drawable/btnbackground"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>